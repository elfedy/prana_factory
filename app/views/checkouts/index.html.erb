<h1>Listado de Pedidos</h1>
<div class="row">
  <div class="col-xs-2">
    Cliente
  </div>
  <div class="col-xs-2">
    Dirección
  </div>
  <div class="col-xs-2">
    Día
  </div>
  <div class="col-xs-2">
    Franja Horaria
  </div>
  <div class="col-xs-2">
    Monto
  </div>
</div>
<div class="row">
  <% @checkouts.each do |checkout| %>
    <div class="col-xs-2">
      <%= checkout.name %>
    </div>
    <div class="col-xs-2">
      <%= checkout.address %>
    </div>
    <div class="col-xs-2">
      <%= checkout.delivery_date %>
    </div>
    <div class="col-xs-2">
      <%= checkout.delivery_time %>
    </div>
    <div class="col-xs-2">
      xxx$$$
    </div>
    <div class="col-xs-2">
      <%= link_to "Ver Pedido", checkout_path(checkout) %>
    </div>
  <% end %>
</div>
