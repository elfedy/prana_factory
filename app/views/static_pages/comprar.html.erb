<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-7 col-sm-offset-1">
      <div id="buy-product-list">
        <% @categories.each do |category| %>
          <div class="row buy-category-container">
            <div class="col-xs-12">
              <h3 class="buy-category-title"><%= category.name %></h3>
            </div>
            <div class="row">
              <% category.products.each do |product| %>
                <div class="col-xs-12 col-lg-6 buy-product-container">
                  <div class="row">
                    <div class="col-xs-12 col-sm-4 buy-product-image-container">
                      <%= image_tag("categories/#{category.name.downcase}/#{product.name}-Buy.jpg",
                          :class => "buy-product-image") %>
                    </div>
                    <div class="col-xs-12 col-sm-8 buy-product-description-container">
                      <h4 class="buy-product-title"><%= product.name %></h4>
                      <% product.skus.each do |sku| %>
                      <div class="row">
                        <div class="col-xs-6">
                          <p class="buy-product-item">
                            x<%= sku.package.identifier %> - <span class="price">$<%= sku.price %></span>
                          </p>
                        </div>
                        <div class="col-xs-6">
                          <%= link_to image_tag("BuyIcon-List.png", :class => "add-icon"),
                              line_items_path(sku_id => sku.id), method: :post %>
                        </div>
                      </div>
                      <% end %>
                    </div>
                  </div>
                </div>
              <% end %>
             </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-xs-12 col-sm-3">
      <div class="row" id="order">
        <div class="row" id="order-header">
          <div class="col-xs-8">
            <h2 id="order-title">Tu pedido</h2>
          </div>
        </div>
        <div id="order-body">
          <div class="row" id="order-items">
            <div class="row order-item">
              <div class="col-xs-9">
                <p class="order-item-name">Order item name</p>
              </div>
              <div class="col-xs-3">
                <p class=order-item-price>$XX</p>
              </div>
            </div>
          <div class="row" id="order-total">
            <div class="col-xs-9">
              <p id="order-item-name-total">Total</p>
            </div>
            <div class="col-xs=3">
              <p id=order-item-price-total>$XX</p>
            </div>
          </div>
        </div>
        <div class="row" id="order-footer">
          <div class="col-xs-12 col-sm-12">
            <%= link_to "Realizar Pedido", "#", :id => "order-button" %>
          </div>
          <div class="col-xs-12 col-sm-7">
            <%= link_to "Borrar", "#", :class => "clear-button" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
