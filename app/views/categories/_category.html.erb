<div class="row">
  <div class="col-xs-12 col-md-10 col-md-offset-1 show-category-container">
    <div class="row show-category-header">
      <div class="col-xs-12">
        <h2 class="show-category-title"><%= category.name %></h2>
      </div>
    </div>

    <div class="row show-category-body">
      <div class="col-xs-12">
        <p class="show-category-description"><%= category.description %></p>
      </div>
    </div>

    <div class="row show-category-products">
      <%= render category.products %>
    </div>
  </div>
</div>
